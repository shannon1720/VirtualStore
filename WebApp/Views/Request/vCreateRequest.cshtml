@using WebApp.Helpers;

@{
    Layout = "~/Views/Shared/DashboardClient.cshtml";
}

<script src="~/Scripts/Views/ControlActions.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />

<div class="text-center">
    <h1> Haz una petición! </h1>
    <br />
    <br />
</div>
<div>
    <form id="MediaForm">
        <h3>Fotos del producto deseado</h3>
        <br />
        <br />
        <div class="row">
            <div class="col-lg-4 justify-content-center">
                <div id="divImage1" class="text-center"></div>
                @Html.CtrlButton(viewName: "vCreateProduct", id: "btnProductImage1", label: "Seleccione una imagen", buttonType: "warning")
                @Html.CtrlInput(id: "txtImage1", type: "text", label: "", columnDataName: "Image1")
            </div>
            <div class="col-lg-4 justify-content-centerr">
                <div id="divImage2"></div>
                @Html.CtrlButton(viewName: "vCreateProduct", id: "btnProductImage2", label: "Seleccione una imagen", buttonType: "warning")
                @Html.CtrlInput(id: "txtImage2", type: "text", label: "", columnDataName: "Image2")
            </div>
            <div class="col-lg-4 justify-content-center">
                <div id="divImage3"></div>
                @Html.CtrlButton(viewName: "vCreateProduct", id: "btnProductImage3", label: "Seleccione una imagen", buttonType: "warning")
                @Html.CtrlInput(id: "txtImage3", type: "text", label: "", columnDataName: "Image3")
            </div>
        </div>
    </form>
    <form id="RequestForm">
        <h3>Informacion de la peticion de producto</h3>
        <br />
        @Html.CtrlInput(id:"txtIdEmail", type: "text", label: "", columnDataName: "IdUser")
        <div class="row">
            <div class='col-lg-3 justify-content-center'>
                <label>Fecha de vencimiento</label>
                <div class='input-group date ' id='datetimepicker1'>
                    <input id="txtElapsedTime" type='text' class="form-control" columndataname="ElapsedTime" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-6 justify-content-center">
                @Html.CtrlInput(id: "txtDescription", type: "text", label: "Descripción", columnDataName: "Description")
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 justify-content-center">
                <label>Categoria</label>
                <select class="form-control" id="CategorySelect" columndataname="IdCategory"></select>
            </div>
        </div>
        <br />
        <br />
    </form>
    <div class="row input-group">
        <div class="col-lg-6 d-inline-block">
            @Html.CtrlButton(viewName: "vCreateRequest", id: "btnCreate", label: "Realizar petición", onClickFunction: "Create", buttonType: "success")
        </div>
        <div class="col-lg-6 d-inline-block text-lg-right">
            @Html.CtrlButton(viewName: "vCreateRequest", id: "btnCancel", label: "Cancelar", onClickFunction: "Cancel", buttonType: "danger")
        </div>
    </div>
</div>
<script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/momentjs/2.14.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css">
<script src="~/Scripts/Views/vCreateRequest.js"></script>
<script src="~/Scripts/Views/UploadImageRequest.js"></script>