@using WebApp.Helpers;
<script src="~/Scripts/Views/vRetrieveShipping.js"></script>
@{
    Layout = "~/Views/Shared/DashboardPlatform.cshtml";
}



@Html.CtrlTable(viewName: "vRetrieveShipping", id: "tblShipping", title: "Lista de proveedores de envío",
columnsTitle: "#,Nombre,Número de teléfono,Tarifa Base,Tarifa por kilómetro,Estado", ColumnsDataName: "Identification,Name,Phone_Number,Minimum_Rate,Rate,State", onSelectFunction: "BindFields")
<br />
<br />
<div class="row input-group">
    <div class="col-lg-6 d-inline-block">
        @Html.CtrlButton(viewName: "vRetrieveShipping", id: "btnActive", label: "Activar", onClickFunction: "Delete", buttonType: "success")
    </div>
    <div class="col-lg-6 d-inline-block text-lg-right">
        @Html.CtrlButton(viewName: "vRetrieveShipping", id: "btnDelete", label: "Desactivar", onClickFunction: "Delete", buttonType: "danger")
    </div>
</div>