@using WebApp.Helpers;
<script src="~/Scripts/Views/vRetrieveCategory.js"></script>
@{
    Layout = "~/Views/Shared/DashboardPlatform.cshtml";
}

@Html.CtrlTable(viewName: "vRetrieveCategory", id: "tblCategory", title: "Lista de categorias", columnsTitle: "#,Nombre,Estado", ColumnsDataName: "ID,Name,State", onSelectFunction: "BindFields")
<br />
<br />
<div class="row">
    <div class="col-lg-4 d-inline-block">
        @Html.CtrlButton(viewName: "vRetrieveCategory", id: "btnActive", label: "Activar", onClickFunction: "Delete", buttonType: "success")
    </div>
    <div class="col-lg-4 d-inline-block text-lg-center">
        @Html.CtrlButton(viewName: "vRetrieveCategory", id: "btnUpdCategory", label: "Modificar", onClickFunction: "updateCategory", buttonType: "primary")
    </div>
    <div class="col-lg-4 d-inline-block text-lg-right">
        @Html.CtrlButton(viewName: "vRetrieveCategory", id: "btnDelete", label: "Desactivar", onClickFunction: "Delete", buttonType: "danger")
    </div>

</div>