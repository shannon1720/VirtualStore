@using WebApp.Helpers;

@{
    Layout = "~/Views/Shared/DashboardClient.cshtml";
}


<link href="~/Content/vCreateCart.css" rel="stylesheet" />

<div id="divCompra">
    <div class="text-center">
        <h3>Carrito de compras</h3>
        <br />
        <br />
    </div>
    <table id="tblCart">
        <thead>
            <tr>
                <th></th>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody id="tbodyCarrito"></tbody>
    </table>
</div>
<div class="card border-success mb-3" id="cardC">
    <div class="card-header">Desgloce de carrito de compra</div>
    <div class="card-body" id="divTotal">

       
    </div>
    <a href="#divMap" class="btn btn-success btn-block btn-rounded z-depth-1" onclick="DivMap()" id="btnPay">Siguiente</a>
    <a href="#divProvider" class="btn btn-success btn-block btn-rounded z-depth-1" onclick="ProviderPay()" id="btnPay1">Siguiente</a>
    <a class="btn btn-success btn-block btn-rounded z-depth-1" onclick="Pay()" id="btnPay2">Finalizar compra</a>
</div>
<br>
<br>
<br>


<div id="divMap">
    <div class="row">
        <label>Selecciona el lugar donde deseas recibir tu pedido:</label>
        <div class="row">
            <div class="col-lg-3">
                @Html.CtrlInput(id: "txtLong", type: "text", label: " ", columnDataName: "Latitude")
            </div>
            <div class="col-lg-4">
                @Html.CtrlInput(id: "txtLat", type: "text", label: " ", columnDataName: "Longitude")
            </div>
        </div>

    </div>
    <div id="map"></div>
</div>
<br>
<br>
<br>
<br>
<br>
<br>
<div id="divProvider">
    <div class="row">
        <div class="col-lg-6">
            <label>Selecciona un proveedor de envío:</label>
            <select class="form-control" id="ShippingSelect" columndataname="Id"></select>
        </div>
    </div>
</div>

<div id="idCard">






</div>



<script src="~/Scripts/Views/gmaps.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxDfTFTaLp-QUjStxCJ4lGMYTqXyNjk9g&libraries=geometry&sensor=false&language=en&callback=initMap" async defer></script>
<script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
<div class="aviso"></div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7/dist/sweetalert2.all.min.js"></script>
