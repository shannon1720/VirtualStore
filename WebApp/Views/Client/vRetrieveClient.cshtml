@using WebApp.Helpers;
<script src="~/Scripts/Views/vRetrieveClient.js"></script>
@{
    Layout = "~/Views/Shared/DashboardPlatform.cshtml";
}

@Html.CtrlTable(viewName: "vRetrieveClient", id: "tblClient", title: "Lista de Clientes",
columnsTitle: "Correo Electronico, Estado" ,
ColumnsDataName: "Email,State",
onSelectFunction: "BindFields")
<br />
<br />
<div class="row input-group">
    <div class="col-lg-6 d-inline-block">
        @Html.CtrlButton(viewName: "vRetrieveClient", id: "btnActive", label: "Activar", onClickFunction: "Delete", buttonType: "success")
    </div>
    <div class="col-lg-6 d-inline-block text-lg-right">
        @Html.CtrlButton(viewName: "vRetrieveClient", id: "btnDelete", label: "Desactivar", onClickFunction: "Delete", buttonType: "danger")
    </div>
</div>