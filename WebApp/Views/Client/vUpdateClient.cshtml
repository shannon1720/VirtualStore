@using WebApp.Helpers;

@{
    Layout = "~/Views/Shared/DashboardClient.cshtml";
}

<form id="ClientForm">
    <h3>Fotos de Cédula y Foto de Perfil</h3>
    <br />
    <div class="row">
        <div class="col-lg-8 justify-content-lg-center">
            <div id="divUrl_Photo_Id"></div>
            @Html.CtrlButton(viewName: "vCreateClient", id: "btnUrl_Photo_Id", label: "Seleccione una imagen", buttonType: "warning")
            @Html.CtrlInput(id: "txtUrl_Photo_Id", type: "text", label: "Foto de Cédula de Identidad ", columnDataName: "Url_Photo_Id")
        </div>
        <div class="col-lg-4 justify-content-lg-center">
            <div id="divUrl_Profile_Pric" class="text-center"></div>
            @Html.CtrlButton(viewName: "vCreateClient", id: "btnUrl_Profile_Pric", label: "Seleccione una imagen", buttonType: "warning")
            @Html.CtrlInput(id: "txtUrl_Profile_Pric", type: "text", label: "Foto de Perfil", columnDataName: "Url_Profile_Pric")
        </div>
    </div>
    <br />
    <br />
    <h3>Información Personal</h3>
    <br />
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtName_1", type: "text", label: "Nombre", columnDataName: "Name_1")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtName_2", type: "text", label: "Segundo Nombre", columnDataName: "Name_2")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtLast_Name_1", type: "text", label: "Primer apellido", columnDataName: "Last_Name_1")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtLast_Name_2", type: "text", label: "Segundo apellido", columnDataName: "Last_Name_2")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtPhone_1", type: "text", label: "Número de teléfono", columnDataName: "Phone_1")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtPhone_2", type: "text", label: "Número de teléfono secundario", columnDataName: "Phone_2")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtEmail", type: "text", label: "Correo Electrónico", columnDataName: "Email")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtId", type: "text", label: "Número de cedula", columnDataName: "Id")
        </div>
    </div>
    <br />
    <br />
</form>
<form id="AddressForm">
    <h3>Dirección</h3>
    <br />
    @Html.CtrlInput(id: "txtIdAddress", type: "text", label: "", columnDataName: "Id")
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtProvince", type: "text", label: "Provincia", columnDataName: "Province")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtCanton", type: "text", label: "Canton", columnDataName: "Canton")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            @Html.CtrlInput(id: "txtCity", type: "text", label: "Ciudad", columnDataName: "City")
        </div>
        <div class="col-lg-4">
            @Html.CtrlInput(id: "txtDescription", type: "text", label: "Dirección Exacta", columnDataName: "Description")
        </div>
    </div>
    <br />
    <br />
</form>
<div class="row input-group">
    <div class="col-lg-8 d-inline-block">
        @Html.CtrlButton(viewName: "vUpdateClient", id: "btnUpdate", label: "Modificar", onClickFunction: "Update", buttonType: "success")
    </div>
    <div class="col-lg-4 d-inline-block">
        @Html.CtrlButton(viewName: "vUpdateClient", id: "btnCancel", label: "Cancelar", onClickFunction: "Cancel", buttonType: "danger")
    </div>
</div>
<script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/Views/vUpdateClient.js"></script>
<script src="~/Scripts/Views/UploadImageClient.js"></script>
