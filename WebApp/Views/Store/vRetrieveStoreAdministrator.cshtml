@using WebApp.Helpers;
<script src="~/Scripts/Views/vRetrieveStoreAdministrator.js"></script>
@{
    Layout = "~/Views/Shared/DashboardPlatform.cshtml";
}



@Html.CtrlTable(viewName: "vRetrieveStoreAdministrator", id: "tblStoreAdministrator", title: "Lista de administradores de tiendas",
    columnsTitle: "Identificación,Nombre,Primer Apellido,Segundo Apellido,Email,Tienda,Estado", ColumnsDataName: "Id,Name_1,Last_Name1,Last_Name2,Email,Id_Store,State", onSelectFunction: "BindFields")


<div class="row input-group">
    <div class="col-lg-6 d-inline-block">
        @Html.CtrlButton(viewName: "vRetrieveStoreAdministrator", id: "btnActive", label: "Activar", onClickFunction: "Delete", buttonType: "success")
    </div>
    <div class="col-lg-6 d-inline-block text-lg-right">
        @Html.CtrlButton(viewName: "vRetrieveStoreAdministrator", id: "btnDelete", label: "Desactivar", onClickFunction: "Delete", buttonType: "danger")
    </div>
</div>